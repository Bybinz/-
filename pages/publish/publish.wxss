/* pages/publish/publish.wxss */
@import '/pages/navigations.wxss';
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin: 0;
  padding: 0;

}
.container1 {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: 0;
  padding: 0;
  margin-top: 2%;

}
.title{
  height: 102rpx;
  width: 100%;
  border: 1px solid #e2e2e3;
}
.pls{
  margin-left: 10px;
}
.choosetag{
  color: #040303;
  font-size: 34rpx;
  margin-top: 42rpx;
}
.tagcontainer{
  display: flex;
  flex-direction: row;
}
.course{
  width: 150rpx;
  height: 60rpx;
  color: #6cb4ff;
  text-align: center;
  border-radius: 20px;
  line-height: 60rpx;
  border: 2px solid #6cb4ff;
  margin-right: 15rpx;
  margin-top: 30rpx;
}
.content{
  width: 100%;
  height: 200rpx;
  border: 1px solid #e2e2e3;
}
.addimg{
  width: 84rpx;
  height: 84rpx;
  border-radius: 6rpx;
}
.imgcontainer{
  width: 204rpx;
  height: 204rpx;
  border: 1px solid #e2e2e3;
  display: flex;
  align-items: center;
  justify-content: center;
}
.selectimg{
  width: 204rpx;
  height: 204rpx;
}
.selectimgcontainer{
  width: auto;
  height: auto;
  border: 1px solid #e2e2e3;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.imgcontainers{
  width:auto;
  height: 204rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
  flex-wrap: wrap;
}
.itemtext{
  margin-top: 10px;
}
.btn{
  width: 610rpx;
  height: 102rpx;
  text-align: center;
  line-height: 102rpx;
  border-radius: 50px;
  color: white;
  background-color:  #6cb4ff;
  margin-top: 10%;
}
.redtext{
  color: red;
}