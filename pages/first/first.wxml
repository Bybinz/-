<!--pages/first/first.wxml-->
<view class="container" style="height:{{scheight+80}}px">
  <view class="container1">
    <swiper indicator-dots="true" autoplay="ture" interval="2000" duration="500" class="swipersty"
      indicator-color="{{indcor}}" indicator-active-color="{{indactcor}}">
      <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
          <image src="{{item}}"></image>
        </swiper-item>
      </block>
    </swiper>
    <view class="baiborder">
      <view class="kaoyan">考研倒计时</view>
      <view class="shengtian"><text class="f1">剩</text><text class="f2">天</text></view>
      <view class="s520">
        <view class="c5">{{havetime1}}</view>
        <view class="c5">{{havetime2}}</view>
        <view class="c5">{{havetime3}}</view>
      </view>

    </view>

  </view>
  <view class="container2">
    <view class="container21">
      <view class="scimg" bindtap="tokaoyaninfo">
        <image class="scimg1" src="https://cloud-minapp-40414.cloud.ifanrusercontent.com/1lmsFwwBfm55i41O.png" />
        <view class="scimg2">考研资料</view>
      </view>
      <view class="scimg" bindtap="toschoolinfo">
        <image class="scimg1" src="https://cloud-minapp-40414.cloud.ifanrusercontent.com/1lmsFwuehw8w2uFb.png" />
        <view class="scimg2">院校查询</view>
      </view>
      <view class="scimg" bindtap="tocontactinfo">
        <image class="scimg1" src="https://cloud-minapp-40414.cloud.ifanrusercontent.com/1lmsFwQVHX2uuavA.png" />
        <view class="scimg2">学长学姐</view>
      </view>
    </view>
    <view class="container22">
      <view class="container221"></view>
      <view class="container222">你可能感兴趣的</view>
      <!-- <view bindtap="changearticle">
      <view class="container223">换一换</view>
      <image class="container224" src="https://cloud-minapp-40414.cloud.ifanrusercontent.com/1lmsFwRLxHaWA9Yg.png"></image>
      </view> -->
    </view>
    <view class="container23">
      <view class="container231">
        <view class="container2311">{{schoolname}}</view>
        <view class="lookmorecontainer" bindtap="lookmore">
          <view class="container2312">查看更多</view>
          <image class="container2313" src="https://cloud-minapp-40414.cloud.ifanrusercontent.com/1lmsFwfIDbbjw8md.png">
          </image>
        </view>
      </view>
      <!-- <view class="container232">
        <view class="scimg_1" wx:for="{{articles}}" bindtap="getarticleid" data-articleid="{{item.articleid}}">
          <image class="scimg12" src="{{item.firstimg}}" />
          <view class="scimg22">{{item.title}}</view>
        </view>
      </view> -->
      <scroll-view scroll-y="true" style="height: 500rpx;" class="container232" bindscrolltoupper="upper" bindscrolltolower="lower" scroll-into-view="{{toView}}" scroll-top="0">
      <view class="cu-card article no-card" wx:for="{{articles}}" bindtap="getarticleid"
        data-articleid="{{item.articleid}}">
        <!-- {{isCard?'no-card':''}} -->
        <view class="cu-item shadow">
          <view class="title">
            <view class="text-cut">{{item.title}}</view>
          </view>
          <view class="content">
            <image src="{{item.firstimg}}" mode="aspectFill"></image>
            <view class="desc">
              <view class="text-content"> {{item.article}}</view>
              <view>
                <view class="cu-tag bg-red light sm round">{{item.type1}}</view>
                <view class="cu-tag bg-green light sm round">{{item.type2}}</view>
              </view>
            </view>
          </view>
        </view>
      </view>
     </scroll-view>
    </view>
  </view>
</view>