/* pages/register/register.wxss */

.container{
  display:flex;
  flex-direction: column;
  width: 100%;
  
  margin: 0;
  padding: 0;
  position: relative;
}
.bgimg{
  width: 100%;
  position: absolute;
  height: 100%;
  z-index: -1;
}
.welcome{
  position: absolute;
  top:10%;
  display: block;
  width: 545rpx;
  height: 100px;
}
.form_c{
  display: flex;
  flex-direction: column;
  width: 300px;
  height: 90%;
  position: absolute;
  top:5%;
  align-items: center;
}
.ipt{
  width: 530rpx;
  height: 45px;
  background-color: white;

  border-radius: 25rpx;
  margin: 10px 0;
  text-align: center;
}
.btn{
  margin-top: 30px;
  width: 100%;
  height: 45px;
  text-align: center;
  border-radius: 100px;
  color: white;
  background:linear-gradient(to left,#97effd, #85a9ff);
}
.txt{
  width: 100%;
  height: 45px;
  margin-top: 10px;
  text-align: center;
  color: #6d6f7b;
  font-size: 10px;
}
.center{
  text-align: center;
}
.gender{
  text-align: center;
  width: 530rpx;
  height: 45px;
  background-color: white;

  border-radius: 25rpx;
  margin: 10px 0;
}
.picker{
  color: #878787;
  text-align: center;
  width: 530rpx;
  height: 45px;
  background-color: white;
  border-radius: 25rpx;
  margin: 10px 0;
  align-content: center;
  line-height: 45px;
}
.radio_group{
  width: 530rpx;
  height: 45px;
  color: #878787;
  border:1 solid red;
  align-items: center;
  line-height: 45px;
}