<!--pages/register/register.wxml-->
<view class="container" style="height:{{scheight}}px">
  <image src="/images/背景.png" class="bgimg" style="height:{{scheight}}px"></image>
  <form bindsubmit="formsubmit" class="form_c">
    <input type="text" class="ipt" name="username" focus="focus" placeholder="请输入姓名" placeholder-class="center" />
    <radio-group bindchange="radiochange" class="radio_group" name="sex">
      <view class="gender">性别：
        <label class="radio">
          <radio value='0' checked="true">男</radio>
        </label>
        <label class="radio">
          <radio value="1">女</radio>
        </label>
      </view>
    </radio-group>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" name="education">
      <view class="picker">
        请选择学历：{{array[index]}}
      </view>
    </picker>
    
    <input type="text" class="ipt" name="schoolName" placeholder="请输入学校" placeholder-class="center" />
    <input type="text" class="ipt" name="major" placeholder="请输入专业" placeholder-class="center" />
    <input type="number" class="ipt" name="sno" placeholder="请输入学号" placeholder-class="center" />
    <input type="number" class="ipt" name="qqno" placeholder="请输入QQ号" placeholder-class="center" />
    <input type="number" class="ipt" name="phone" placeholder="请输入手机号码" placeholder-class="center" />

    <button form-type="submit" class="btn"><text>立即注册</text></button>


  </form>


</view>