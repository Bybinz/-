/* pages/login/login.wxss */
@import "/pages/navigations.wxss";
.container{
  display:flex;
  flex-direction: column;
  width: 100%;
  height: 1000px;
  margin: 0;
  padding: 0;
  position: relative;
  background-color: #ffffff;
}
.returncontainer{
  display: flex;
  flex-direction:row;
  height: 33rpx;
  width: 100rpx;
  align-items: center;
  position:fixed;
  left: 3%;
  top: 5%;
}
.return{
  width: 30rpx;
  height: 30rpx;
}
.return_txt{
  color:rgba(76, 76, 236, 0.664);
  font-size: 33rpx;
  height: 33rpx;
  width: 110rpx;
  line-height: 33rpx;
}
.bgimg{
  width: 100%;
  position: absolute;
  height: 100%;
  z-index: 0;
}
.welcome{
  position: absolute;
  top:14%;
  display: block;
  width: 381rpx;
  height: 82px;
  left: 15%;
}
.logo{
  width: 127rpx;
  height: 144rpx;
  position:absolute;
  top: 13%;
  right: 15%;
}
.form_sbt{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:auto;
  margin: 0 auto;
  align-items: center;
}
.form_c{
  display: flex;
  flex-direction: column;
  width: 300px;
  height: auto;
  position: absolute;
  top:33%;
  align-content: center;
}
.ipt{
  width: 530rpx;
  height: 50px;
  background-color:none;
  text-align: left;

  margin: 0;
  border-bottom: 1px solid black;
}
.ipttxt{
  font-size: 20px;
  letter-spacing: 10px;
}
.iptcontainer{
  margin-bottom: 10px;
}
.btn{
  margin-top: 60px;
  width:60%;
  height: 50px;
  line-height: 50px;
  font-size: 20px;
  text-align: center;
  border-radius: 100px;
  color: white;
  background:linear-gradient(to left,#97effd, #85a9ff);
}

.txt{
  width: 100%;
  height: 50px;
  margin-top: 10px;
  text-align: center;
  color: #6c7177;
  font-size: 10px;
}
.center{
  text-align: left;
}