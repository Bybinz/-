/* pages/login/login.wxss */

.container{
  display:flex;
  flex-direction: column;
  width: 100%;
  
  margin: 0;
  padding: 0;
  position: relative;
}
.bgimg{
  width: 100%;
  position: absolute;
  height: 100%;
  z-index: -1;
}
.welcome{
  position: absolute;
  top:10%;
  display: block;
  width: 545rpx;
  height: 100px;
}
.form_sbt{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:195px;
  margin: 0 auto;
  align-items: center;
}
.form_c{
  display: flex;
  flex-direction: column;
  width: 300px;
  height: 200px;
  position: absolute;
  top:35%;
  align-content: center;
}
.ipt{
  width: 530rpx;
  height: 50px;
  background-color: white;
  text-align: center;
  border-radius: 25rpx;
  margin: 10px 0;
}
.btn{
  margin-top: 30px;
  width:90%;
  height: 50px;
  text-align: center;
  border-radius: 100px;
  color: white;
  background:linear-gradient(to left,#97effd, #85a9ff);
}
.txt{
  width: 100%;
  height: 50px;
  margin-top: 10px;
  text-align: center;
  color: #6d6f7b;
  font-size: 10px;
}
.center{
  text-align: center;
}