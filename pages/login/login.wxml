<!--pages/login/login.wxml-->
<view class="container" style="height:{{scheight}}px">
  <view class="returncontainer" bindtap="reback">
    <image class="return" src="https://cloud-minapp-40414.cloud.ifanrusercontent.com/1lnfagSVfRoWO5tm.png"></image>
    <text class="return_txt">返回</text>
  </view>
  <image src="https://cloud-minapp-40414.cloud.ifanrusercontent.com/1lpSngR0BTUclsKk.png" class="bgimg" style="height:{{scheight}}px"></image>
  <image src="https://cloud-minapp-40414.cloud.ifanrusercontent.com/1lmsFweYVXMN0ra1.png" class="welcome"></image>
  <image src="https://cloud-minapp-40414.cloud.ifanrusercontent.com/1lpSnbAFQNiXteot.png" class="logo"></image>
  
    <form bindsubmit="formsubmit" class="form_c">
      <view class="form_sbt">
      <view class="iptcontainer">
      <text class="ipttxt">姓名</text>
      <input type="text" class="ipt" name="username" focus="focus" placeholder="请输入姓名" placeholder-class="center" bindinput="nameinput" value="{{namevalue}}"/></view>
      <view class="iptcontainer">
      <text class="ipttxt">学号</text>
      <input type="number" class="ipt" name="sno" placeholder="请输入学号" placeholder-class="center" bindinput="snoinput" value="{{snovalue}}"/></view>
      <button form-type="submit" class="btn">登录</button>
    </view>
    <view class="txt" bindtap="toregister"> <text>还未注册？点击立即注册</text></view>
    </form>
  


</view>